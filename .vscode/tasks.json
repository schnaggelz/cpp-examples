{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Bazel Build Target",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "-c", "dbg",
                "${input:targetLabel}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Bazel Run Tests with Coverage",
            "type": "bazel",
            "command": "coverage",
            "targets": ["${input:targetLabel}"],
            "options": ["--instrumentation_filter=.*"],
        }
    ],
    "inputs": [
        {
            "id": "targetLabel",
            "type": "promptString",
            "description": "Enter the Bazel target label to build (e.g., //main:hello-world)"
        }
    ]
}
